OBJS=localtime.o

ifeq ($(OSARCH),SunOS)
  CFLAGS+=-DSOLARIS -I../include/solaris-compat
endif

all: libtime.a

libtime.a: $(OBJS)
	$(AR) rv $@ $(OBJS)
	$(RANLIB) $@

install:

clean:
	rm -f libtime.a *.o test .depend

depend: .depend

.depend:
	../build_tools/mkdep $(CFLAGS) *.c

test: test.c
	${CC} ${CFLAGS} -o test test.c

ifneq ($(wildcard .depend),)
include .depend
endif
