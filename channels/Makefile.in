EXOLIBS=@EXOLIBS@
CHANNEL_LIBS=chan_sip.so chan_agent.so chan_mgcp.so chan_iax2.so \
	     chan_local.so chan_features.so

ifeq ($(findstring BSD,${OSARCH}),BSD)
 CFLAGS+=-I/usr/local/include -L/usr/local/lib
endif

ifeq ($(PROC),sparc64)
  PROC=ultrasparc
  CFLAGS += -mtune=$(PROC) -O3 -pipe -fomit-frame-pointer -mcpu=v8
endif

ifeq (${OSARCH},SunOS)
  SOLINK+=-lrt
endif



CFLAGS+=-Wno-missing-prototypes -Wno-missing-declarations

ifneq ($(wildcard /usr/lib/libpri.so.1)$(wildcard /usr/local/lib/libpri.so.1),)
  CFLAGS+=-DZAPATA_PRI
  ZAPPRI=-lpri
endif

ifneq ($(wildcard /usr/lib/libunicall.so.0)$(wildcard /usr/local/lib/libunicall.so.0),)
  CHANNEL_LIBS+=chan_unicall.so
endif

ifneq ($(wildcard /usr/include/linux/zaptel.h)$(wildcard /usr/local/include/zaptel.h)$(wildcard /usr/pkg/include/zaptel.h),)
  ifeq (${OSARCH},NetBSD)
    SOLINK+=-L/usr/pkg/lib
  endif
  ifeq (${OSARCH},FreeBSD)
    SOLINK+=-L/usr/local/lib
  endif
  CFLAGS+=-DIAX_TRUNKING
  CHANNEL_LIBS+=chan_zap.so
endif

ifneq ($(EXOLIBS),)
	CHANNEL_LIBS+=chan_exosip2.so
endif

CFLAGS+=-DCRYPTO
CFLAGS+=-fPIC

CFLAGS+=#-DVOFRDUMPER

ZAPDIR=/usr/lib

#CFLAGS+=$(shell [ -f $(ZAPDIR)/libzap.a ] && echo "-I$(ZAPDIR)")

all: depend $(CHANNEL_LIBS) 

clean:
	rm -f *.so *.o .depend
	rm -f busy.h ringtone.h gentone gentone-ulaw

%.so : %.o
	$(CC) $(SOLINK) -o $@ $<

ifneq ($(wildcard .depend),)
  include .depend
endif

gentone: gentone.c
	$(HOST_CC) -o gentone gentone.c -lm

gentone-ulaw: gentone-ulaw.c
	$(HOST_CC) -o gentone-ulaw gentone-ulaw.c -lm

busy.h: gentone
	./gentone busy 480 620

ringtone.h: gentone
	./gentone ringtone 440 480

chan_oss.o: chan_oss.c busy.h ringtone.h

chan_alsa.o: chan_alsa.c busy.h ringtone.h

ifeq (${OSARCH},OpenBSD)
chan_oss.so: chan_oss.o
	$(CC) $(SOLINK) -o $@ chan_oss.o -lossaudio
endif
ifeq (${OSARCH},NetBSD)
chan_oss.so: chan_oss.o
	$(CC) $(SOLINK) -o $@ chan_oss.o -lossaudio
endif

chan_iax2.so: chan_iax2.o iax2-parser.o iax2-provision.o
	$(CC) $(SOLINK) -o $@ chan_iax2.o iax2-parser.o iax2-provision.o

chan_zap.o: chan_zap.c
	$(CC) -c $(CFLAGS) -o chan_zap.o chan_zap.c

chan_zap.so: chan_zap.o
	$(CC) $(SOLINK) -o $@ $<  $(ZAPPRI) -ltonezone

chan_sip.so: chan_sip.o
	$(CC) $(SOLINK) -o $@ chan_sip.o

chan_alsa.o: $(ALSA_SRC)

chan_alsa.so: chan_alsa.o
	$(CC) $(SOLINK) -o $@ $< -lasound -lm -ldl

chan_nbs.so: chan_nbs.o
	$(CC) $(SOLINK) -o $@ $< -lnbs

chan_vpb.o: chan_vpb.c
	$(CXX) -c $(CFLAGS) -o $@ chan_vpb.c

chan_vpb.so: chan_vpb.o
	 $(CXX) $(SOLINK) -o $@ $< -lvpb -lpthread -lm -ldl

chan_exosip2.so: chan_exosip2.o
	$(CC) $(SOLINK) -o $@ chan_exosip2.o -leXosip2 -losip2 -losipparser2 -lortp -lpthread      

install: all
	for x in $(CHANNEL_LIBS); do $(INSTALL) -m 755 $$x $(DESTDIR)$(MODULES_DIR) ; done
	if ! [ -f chan_iax.so ]; then rm -f $(DESTDIR)$(MODULES_DIR)/chan_iax.so ; fi

depend: .depend

.depend:
	../build_tools/mkdep $(CFLAGS) `ls *.c`

env:
	env

